<UserControl x:Class="Confou.UserControls.EventCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Confou.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <Grid Background="#FF0F0F38">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="EventAfisha" Width="120" Height="150"/>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <StackPanel Background="Black" Height="30">
                <TextBlock x:Name="EventDate" Text="DATE" FontSize="14" Foreground="White" Margin="10,5,0,0"/>
            </StackPanel>
            <TextBlock x:Name="EventName" Text="PLACEHOLDER" FontSize="18" Foreground="White" FontWeight="Bold" Margin="5,7,0,0"/>
            <TextBlock x:Name="EventPrice" Text="COST" FontSize="14" Foreground="LightGray" Margin="5,20,0,0"/>
            <TextBlock x:Name="EventPlace" Text="HALL" FontSize="16" Foreground="Gold" Margin="5,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
